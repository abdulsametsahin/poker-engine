DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=root
DB_NAME=poker_engine

SERVER_PORT=8080
JWT_SECRET=your-secret-key-change-this-in-production

POKER_ENGINE_BINARY=../poker-engine/poker-engine

# Matchmaking countdown duration in seconds
# This is the time players see before the game starts after a match is found
MATCHMAKING_COUNTDOWN_SECONDS=10

# SECURITY: WebSocket CSRF Protection
# Comma-separated list of allowed origins for WebSocket connections
# CRITICAL: This prevents CSRF attacks by rejecting connections from unauthorized websites
# Format: http://localhost:3000,https://yourdomain.com
# Default (if not set): http://localhost:3000,http://127.0.0.1:3000
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
